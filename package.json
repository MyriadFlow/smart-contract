    "@types/chai": "^4.3.0",
    "@types/js-yaml": "^4.0.5",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.12",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
